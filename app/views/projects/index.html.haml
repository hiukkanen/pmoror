%table#projects
  %thead
    %tr
      %th Aika
      %th Asiakas
      %th Projektin nimi
      %th Projektin kuvaus
      %th Projektin vaihe
      -Project.task_names.each do |t|
        %th= t.to_s
  %tbody
    -@projects.each do |p|
      %tr
        %td.input{"data-id" => p.id, "data-url" => "/projects/start_end_date"}= p.start_end_date
        %td.input{"data-id" => p.customer!.id, "data-url" => "/customers/name"}= p.customer!.name
        %td.input{"data-id" => p.id, "data-url" => "/projects/name"}= p.name
        %td.input{"data-id" => p.id, "data-url" => "/projects/description"}= p.description
        %td.input{"data-id" => p.id, "data-url" => "/projects/state"}= p.state
        -p.tasks_in_order!.each do |t|
          %td{:class => "task #{t.status!.css_class}", "data-code" => t.status!.code, "data-id" => t.id} 
            .comment{"data-id" => t.id}= "#{t.status!.comment}"
            %span{:style => "display:none", "data-code" => t.status!.code}
-form_for @project do |f|
  %table#new-project
    %thead
      %tr
        %th Nimi
        %th OK
      %tr
        %td= f.text_field :name
        %td
          %button{type="submit"} Lisää


